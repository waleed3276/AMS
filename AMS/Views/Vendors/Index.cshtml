@model IEnumerable<AMS.Models.Vendor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationUser.UserRole)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vendor_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vendor_MobileNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vendor_Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vendor_Remaining)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vendor_Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vendor_NTN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vendor_Company)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vendor_Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ApplicationUser.UserRole)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vendor_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vendor_MobileNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vendor_Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vendor_Remaining)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vendor_Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vendor_NTN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vendor_Company)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vendor_Date)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Vendor_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Vendor_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Vendor_Id })
        </td>
    </tr>
}

</table>
