@model IEnumerable<Transaction>
@using AMS.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ApplicationDbContext db = new ApplicationDbContext();
}

<!-- Start content -->
<div class="content">
    <div class="container-fluid">


        <div class="row page-titles">
            <div class="col-md-5 align-self-center">
                <h4 class="text-themecolor">Reports</h4>
            </div>
            <div class="col-md-7 align-self-center text-right">
                <div class="d-flex justify-content-end align-items-center">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                        <li class="breadcrumb-item active">Search Report</li>
                    </ol>

                </div>
            </div>
        </div>
        <!-- end row -->
        <!-- start search area -->

        <div class="row text-center">
            <div class="col-sm-12">
                <h3 class="m-t-20">Search Report</h3>
                <div class="border center-block m-b-20"></div>
            </div>
        </div>
        <!-- end row -->


        <div class="row">
            <form method="post" action="~/Reports/GetReport">
                <div class="col-sm-12">


                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <select id="mySelect" onchange="myFunction()" class="form-control" name="ReportType" data-style="btn-default">
                                    <option value="">Report Type</option>
                                    <option value="1">Monthly </option>
                                    <option value="2">Weekly</option>

                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">

                                <select id="Month" class="form-control" name="Month" disabled>

                                    <option value="">Months</option>
                                    <option value="1">January </option>
                                    <option value="2">Febuary</option>
                                    <option value="3">March</option>
                                    <option value="4">April</option>
                                    <option value="5">May </option>
                                    <option value="6">June</option>
                                    <option value="7">July</option>
                                    <option value="8">August</option>
                                    <option value="9">September</option>
                                    <option value="10">Octubar</option>
                                    <option value="11">November</option>
                                    <option value="12">December</option>

                                </select>

                            </div>
                        </div>
                        <div class="col-sm-3 col-lg-2">
                            <div class="form-group">
                                <select id="Week" class="form-control col-lg-2" name="DateFrom" data-style="btn-default" disabled>
                                    <option value="">Date From </option>
                                    @for (int i = 1; i < 32; i++)
                                    {
                                        <option value="@i">@i </option>

                                    }
                                </select>

                            </div>
                        </div>
                        <div class="col-sm-3 col-lg-2">
                            <div class="form-group">
                                <select id="Week2" class="form-control col-lg-2" name="DateTo" data-style="btn-default" disabled>
                                    <option value="">Date to </option>
                                    @for (int i = 1; i < 32; i++)
                                    {
                                        <option value="@i">@i </option>

                                    }
                                </select>

                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 m-b-30 text-center m-t-10">
                        <a href="~/Reports/GetReport"><button type="submit" name="Invoice" value="1" class="btn btn-purple waves-effect waves-light"><i class="mdi mdi-magnify m-r-5"></i>All SO/PO</button></a>
                        <a href="~/Reports/GetReport"><button type="submit" name="Invoice" value="2" class="btn btn-purple waves-effect waves-light"><i class="mdi mdi-magnify m-r-5"></i>All Purchase</button></a>
                        <a href="~/Reports/GetReport"><button type="submit" name="Invoice" value="3" class="btn btn-purple waves-effect waves-light"><i class="mdi mdi-magnify m-r-5"></i>All Sale</button></a>
                        <a href="~/Reports/GetReport"><button type="submit" name="Invoice" value="4" class="btn btn-purple waves-effect waves-light"><i class="mdi mdi-magnify m-r-5"></i>All Customer/Vendor Balance</button></a>
                    </div>

                </div>
            </form>
        </div>
        <!-- end row -->
        <!-- end search area -->

        <div class="row">
            <div class="col-sm-4">
            </div><!-- end col -->
        </div>


        <div class="row text-center">
            <div class="col-sm-12">
                <h3 class="m-t-20">Today Report </h3>
                <div class="border center-block m-b-20"></div>
            </div>
        </div>
        <div class="row">
            <form method="post" action="~/Reports/TodayReport">
                <div class="col-sm-12">
                    <div class="col-xs-12 m-b-30 text-center m-t-10">
                        <a href="~/Reports/TodayReport"><button type="submit" name="Invoice" value="1" class="btn btn-purple waves-effect waves-light"><i class="mdi mdi-magnify m-r-5"></i>Today SO/PO</button></a>
                        <a href="~/Reports/TodayReport"><button type="submit" name="Invoice" value="2" class="btn btn-purple waves-effect waves-light"><i class="mdi mdi-magnify m-r-5"></i>Today Purchase</button></a>
                        <a href="~/Reports/TodayReport"><button type="submit" name="Invoice" value="3" class="btn btn-purple waves-effect waves-light"><i class="mdi mdi-magnify m-r-5"></i>Today Sale</button></a>
                        <a href="~/Reports/TodayReport"><button type="submit" name="Invoice" value="4" class="btn btn-purple waves-effect waves-light"><i class="mdi mdi-magnify m-r-5"></i>Today Customer/Vendor Balance</button></a>
                        <a href="~/Reports/TodayReport"><button type="submit" name="Invoice" value="5" class="btn btn-purple waves-effect waves-light"><i class="mdi mdi-magnify m-r-5"></i>Today Transaction</button></a>
                    </div>
                </div>
            </form>
        </div>
    </div> <!-- container -->

</div> <!-- content -->

<script>
    function myFunction() {
        var x = document.getElementById("mySelect").value;

        if (x == 1) {
            document.getElementById("Month").disabled = false;
            document.getElementById("Week").disabled = true;
            document.getElementById("Week2").disabled = true;
        }
        if (x == 2) {
            document.getElementById("Month").disabled = false;
            document.getElementById("Week").disabled = false;
            document.getElementById("Week2").disabled = false;
        }
    }
</script>

    
