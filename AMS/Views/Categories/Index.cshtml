

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<script src="~/Angular/CategoryController.js"></script>
<div ng-controller="CategoryCtrl">
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 align-self-center">
                <h4 class="text-themecolor">Category</h4>
            </div>
            <div class="col-md-7 align-self-center text-right">
                <div class="d-flex justify-content-end align-items-center">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                        <li class="breadcrumb-item active">Category</li>
                    </ol>

                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Category</h4>
                        <h6 class="card-subtitle">All Categories Data</h6>
                        <!-- Accordian -->
                        <div class="accordion" id="accordionTable">
                            <div class="card m-b-5">
                                <div class="card-header" id="heading1">
                                    <h5 class="mb-0">
                                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#col1" aria-expanded="true" aria-controls="col1">
                                            Collapse Category Data
                                        </button>
                                    </h5>
                                </div>
                                <div id="col1" class="collapse show" aria-labelledby="heading1" data-parent="#accordionTable">
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table id="demo-foo-accordion" class="table table-bordered m-b-0 toggle-arrow-tiny" data-filtering="true" data-paging="true" data-sorting="true">
                                                <thead>
                                                    <tr class="footable-filtering">
                                                        <th> Category Title </th>
                                                        <th> Category Code </th>
                                                        <th> Category Description </th>
                                                        <th> Status </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr ng-repeat="obj in CategoryData">
                                                        <td>{{obj.Category_Title}}</td>
                                                        <td>{{obj.Category_Code}}</td>
                                                        <td>{{obj.Category_Description}}</td>
                                                        <td><span class="label label-table label-success" ng-show="obj.Category_Status">Active</span><span class="label label-table label-inverse" ng-show="!obj.Category_Status">Disabled</span></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>